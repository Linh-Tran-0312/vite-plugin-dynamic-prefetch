{
    "compilerOptions": {
      "declaration": true,
      "module": "commonJS",             
      "target": "es2020",  
      "lib": ["es2020"],          
      "moduleResolution": "node",     
      "strict": true,                 
      "esModuleInterop": true,       
      "skipLibCheck": true,          
      "noEmit": true    
      },
      "include": [
        "src"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
}